<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/category_lockscreen_title" >

    <PreferenceCategory
    android:title="@string/general">

    <!-- Enable AOD on charging only -->
    <com.genesis.support.preferences.SecureSettingSwitchPreference
        android:key="doze_on_charge"
        android:title="@string/doze_on_charge_title"
        android:summary="@string/doze_on_charge_summary" />

    <!-- AOD Schedule -->
    <Preference
        android:key="always_on_display_schedule"
        android:title="@string/always_on_display_schedule_title"
        android:fragment="com.beyond.ordinary.fragments.AODSchedule" />
    </PreferenceCategory>

    <PreferenceCategory
    android:title="@string/udfps">

        <!-- Screen-Off UDFPS -->
        <Preference
            android:key="gesture_screen_off_udfps_input_summary"
            android:title="@string/ambient_display_screen_off_udfps_title"
            android:fragment="com.beyond.ordinary.fragments.ScreenOffUdfpsSettings"
            settings:searchable="false"
            settings:controller="com.beyond.ordinary.fragments.ScreenOffUdfpsPreferenceController" />
    </PreferenceCategory>
</PreferenceScreen>
